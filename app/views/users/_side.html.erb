<div class="col-md-3">
   <h2>User info</h2>
   <%= attachment_image_tag @user, :profile_image, format: 'jpg', fallback: "no_image.jpg", size:"100x100" %>
   <table class="table">
     <tbody>
       <tr>
         <th>name</th>
         <th><%= user.name %></th>
       </tr>
       <tr>
         <th>introduction</th>
         <th><%= user.introduction %></th>
       </tr>
     </tbody>
   </table>

   <div class="row">
      <%= link_to "", edit_user_path(user.id), class:"btn btn-outline-secondary btn-block fas fa-user-cog" %>
   </div>

   <h2 class="mt-3">New book</h2>
   <%= form_with model:user, local:true do |f| %>
   <div class="form-group">
     <label for="book_title">Title</label>
     <%= f.text_field :title, class:"form-control book_title", id:"book_title" %>
   </div>
   <div class="form-group">
     <label for="book_body">Opinion</label>
     <%= f.text_area :body, class:"form-control book_body", id:"book_body" %></br>
   </div>
   <div class="form-group">
     <%= f.submit "Create Book", class: "btn btn-success" %>
   </div>
   <% end %>
</div>