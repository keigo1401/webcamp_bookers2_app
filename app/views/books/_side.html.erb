<div class="col-md-3">
   <h2>User info</h2>
   <%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, format: 'jpg', fallback: "no_image.jpg" %>
   <table class="table">
     <tbody>
       <tr>
         <th>name</th>
         <th><%= book.user.name %></th>
       </tr>
       <tr>
         <th>introduction</th>
         <th><%= book.user.introduction %></th>
       </tr>
     </tbody>
   </table>

   <div class="row">
     <a class="btn btn-outline-secondary btn-block fas fa-user-cog edit_user_15705" href="/users/15705/edit"></a>
   </div>

   <h2 class="mt-3">New book</h2>
   <%= form_with model:book, local:true do |f| %>
   <div class="form-group">
     <label for="book_title">Title</label>
     <%= f.text_field :title, class:"form-control book_title", id:"book_title" %>
   </div>
   <div class="form-group">
     <label for="book_body">Opinion</label>
     <%= f.text_area :body, class:"form-control book_body", id:"book_body" %></br>
   </div>
   <div class="form-group">
     <%= f.submit "Create Book", class: "btn btn-success" %>
   </div>
   <% end %>
</div>