<p id="notice">You have created book successfully.</p>

<div class="container">
  <div class="row">
        <!--左側サイドバー-->
    <%= render 'books/side', book: @book %>

    <div class="col-md-8 offset-md-1">
  		<h2>Book detail</h2>
      <table class="table table-hover table-inverse">
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(book.user.id) do %>
                <%= attachment_image_tag book.user, :profile_image, fallback:"no_image.jpg", format:'jpeg', size:"40x40" %></br>
                <%= book.user.name %>
                <% end %>
              </td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
              <td>
                <%= link_to edit_book_path(book.id) do |f| %>
                <%= f.submit "Edit", class: "btn btn-sm btn-success" %>
                <% end %>
              </td>
              <td>
                <%= link_to books_path, method: :delete, data: {confirm: 'Are you sure?'}  do |f| %>
                <%= f.submit "Destroy", class: "btn btn-sm btn-danger" %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>