<% if flash[:notice] %>
 <p id="notice"><%= flash[:notice] %></p>
<% end %>

<div class="container">
  <div class="row">
        <!--左側サイドバー-->
    <%= render 'books/side', book: @book %>

    <!--右側-->
    <div class="col-md-8 offset-md-1">
  		<h2>Book detail</h2>
      <table class="table table-hover table-inverse">
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(book.user.id) do %>
                <%= attachment_image_tag book.user, :profile_image, fallback:"no_image.jpg", format:'jpeg', size:"40x40" %></br>
                <%= book.user.name %>
                <% end %>
              </td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
              <td>
                <%= link_to "Edit", edit_book_path(book.id), class:"btn btn-sm btn-success" %>
              </td>
              <td>
                <%= link_to "Destroy", book_path(book), method: :delete, class:"btn btn-sm btn-danger", data: {confirm: '本当に消しますか?'} %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>